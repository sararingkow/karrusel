<div class="carrousel_gallery1">
  <body>
    <input type="radio" name="position" checked />
    <input type="radio" name="position" />
    <input type="radio" name="position" />
    <input type="radio" name="position" />
    <input type="radio" name="position" />
    <main id="carousel">
      <div class="item"></div>
      <div class="item"></div>
      <div class="item"></div>
      <div class="item"></div>
      <div class="item"></div>
      <main></main>

      <style>
        /*carousel (kode l√•nt fra: https://freefrontend.com/css-carousels)*/

        .carrousel_gallery1 {
          height: 450px;
          display: grid;
          grid-template-rows: 400px 10px;
          grid-template-columns: 1fr 30px 30px 30px 30px 30px 1fr;
          align-items: start;
          justify-items: center;
        }

        main#carousel {
          grid-row: 1 / 2;
          grid-column: 1 / 8;
          width: 100vw;
          height: 500px;
          display: flex;
          align-items: flex-start;
          justify-content: center;
          overflow: hidden;
          transform-style: preserve-3d;
          perspective: 600px;
          --items: 5;
          --middle: 3;
          --position: 1;
          pointer-events: none;
          margin-top: 30px;
        }

        div.item {
          position: absolute;
          width: 600px;
          height: 300px;
          --r: calc(var(--position) - var(--offset));
          --abs: max(calc(var(--r) * -1), var(--r));
          transition: all 0.25s linear;
          transform: rotateY(calc(-10deg * var(--r))) translateX(calc(-300px * var(--r)));
          z-index: calc((var(--position) - var(--abs)));
        }

        div.item:nth-of-type(1) {
          --offset: 1;
          background-image: url(/webp/section_image1.webp);
          background-repeat: no-repeat;
        }
        div.item:nth-of-type(2) {
          --offset: 2;
          background-image: url(/webp/section_image2.webp);
          background-repeat: no-repeat;
        }
        div.item:nth-of-type(3) {
          --offset: 3;
          background-image: url(/webp/section_image3.webp);
          background-repeat: no-repeat;
        }
        div.item:nth-of-type(4) {
          --offset: 4;
          background-image: url(/webp/section_image4.webp);
          background-repeat: no-repeat;
        }
        div.item:nth-of-type(5) {
          --offset: 5;
          background-image: url(/webp/section_image5.webp);
          background-repeat: no-repeat;
        }

        input:nth-of-type(1) {
          grid-column: 2 / 3;
          grid-row: 2 / 3;
        }
        input:nth-of-type(1):checked ~ main#carousel {
          --position: 1;
        }

        input:nth-of-type(2) {
          grid-column: 3 / 4;
          grid-row: 2 / 3;
        }
        input:nth-of-type(2):checked ~ main#carousel {
          --position: 2;
        }

        input:nth-of-type(3) {
          grid-column: 4 /5;
          grid-row: 2 / 3;
        }
        input:nth-of-type(3):checked ~ main#carousel {
          --position: 3;
        }

        input:nth-of-type(4) {
          grid-column: 5 / 6;
          grid-row: 2 / 3;
        }
        input:nth-of-type(4):checked ~ main#carousel {
          --position: 4;
        }

        input:nth-of-type(5) {
          grid-column: 6 / 7;
          grid-row: 2 / 3;
        }
        input:nth-of-type(5):checked ~ main#carousel {
          --position: 5;
        }
      </style>
    </main>
  </body>
</div>
