---
import Icons from "../components/Icons.astro";
---

<footer>
  <div class="footer-nav">
    <div class="footer-logo">
      <a href="/"><img src="/svg/logo_footer.svg" alt="footer logo" /></a>
    </div>
    <ul class="footer-nav-list">
      <div class="column1">
        <li><a href="/lineup/">LINEUP</a></li>
        <li><a href="/ticket_side/">TICKETS</a></li>
        <li><a href="/programliste/">PROGRAM</a></li>
      </div>
      <div class="column2">
        <li><a href="/gallery_page/">GALLERY</a></li>
        <li><a href="/about/">ABOUT US</a></li>
      </div>
    </ul>
    <div class="footer-social">
      <div class="footer-social-img1"><Icons /></div>
    </div>
  </div>
</footer>

<style>
  .footer-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 20px;
  }
  .footer-logo {
    max-width: 130px;
    margin: 25px;
  }

  .footer-logo img {
    width: 100%;
  }
  .footer-logo img:hover {
    opacity: 70%;
  }
  .footer-nav-list {
    display: flex;
    justify-content: center;
    text-decoration: none;
    gap: 70px;
    margin: 25px;
  }

  .footer-nav-list li {
    list-style: none;
  }

  .column1 li a,
  .column2 li a {
    line-height: 2;
  }

  .footer-social {
    display: flex;
    justify-items: center;
    margin: 25px;
  }
</style>
