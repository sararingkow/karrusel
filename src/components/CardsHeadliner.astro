---
const { data, className } = Astro.props;
//const { name, date, land, imgPath } = Astro.props;
import ButtonOverview from "./ButtonOverview.astro";
---

<article class={className}>
  <div class="card-container">
    <img src={data.image} alt="" />
    <div class="navn">
      <h2 class="name">{data.name}</h2>
      <a href={`../artists/${data.slug}/`}>
        <div class="button_list">
          <ButtonOverview variant="secondary"> See more </ButtonOverview>
        </div>
      </a>
    </div>
    <div class="date_land">
      <div class="date">{data.date}</div>
      <div class="land">{data.land}</div>
    </div>
  </div>
</article>

<style>
  article {
    padding: 30px;
  }
  .card-container {
    width: 300px;
    display: flex;
    position: relative;
    height: auto;
    gap: 20px;
    transition: 1s;
  }

  .card-container:hover {
    transform: scale(1.1);
    z-index: 2;
  }
  .head_1 {
    position: absolute;
    top: 0;
    transform: translate(-260px, 190px);
  }
  .head_2 {
    position: absolute;
    top: 0;
    transform: translate(507px, -126px);
  }
  .head_3 {
    position: absolute;
    top: 0;
    transform: translate(447px, 297px);
  }
  img {
    display: flex;
    position: relative;
    width: 300px;
    height: auto;
    border-radius: 20px;
    object-fit: cover;
  }

  .navn {
    position: absolute;
    display: flex;
    justify-content: space-around;
    bottom: 0;
    width: 300px;
    border-radius: 0 0 20px 20px;
    padding: 0 20px 10px 20px;
    align-items: center;
    font-family: "Alumni Sans", sans-serif;
  }

  .name {
    inline-size: 185px;
    justify-content: center;
    overflow-wrap: break-word;
    font-family: "Alumni Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: bold;
    font-style: normal;
    font-size: 50px;
    font-weight: 800;
    color: #f84104;
  }
  .date_land {
    display: flex;
    color: #3e3a3a;
    position: absolute;
    font-size: 20px;
    font-family: "Alumni Sans", sans-serif;
    font-weight: 600;
    justify-content: space-between;
    width: 298px;
    padding: 10px 20px;
  }
  .button_list {
    align-self: flex-end;
    padding-bottom: 15px;
  }

  @media (min-width: 1200px) {
    .head_1 {
      position: absolute;
      top: 0;
      transform: translate(30%, 50%);
    }
    .head_2 {
      position: absolute;
      top: 0;
      transform: translate(-24%, -43%);
    }
    .head_3 {
      position: absolute;
      top: 0;
      transform: translate(108%, 143%);
    }
