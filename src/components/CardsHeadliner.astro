---
const { name, date, land, imgPath } = Astro.props;
import ButtonOverview from "./ButtonOverview.astro";
---

<head>
  <link href="https://fonts.googleapis.com/css2?family=Alumni+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />
</head>
<body>
  <article>
    <div class="card-container">
      <img src={imgPath} alt="" />
      <div class="navn">
        <h2 class="name">{name}</h2>
        <div class="button_list">
          <a href="#"><ButtonOverview variant="secondary"> See more </ButtonOverview></a>
        </div>
      </div>
      <div class="date_land">
        <div class="date">{date}</div>
        <div class="land">{land}</div>
      </div>
    </div>
  </article>
</body>

<style>
  .card-container {
    width: 300px;
    height: 350px;
    display: flex;
    position: relative;
    height: auto;
    gap: 20px;
    transition: 1s;
  }

  .card-container:hover {
    transform: scale(1.1);
    z-index: 2;
  }
  img {
    display: flex;
    position: relative;
    width: 300px;
    height: 350px;
    border-radius: 20px;
    object-fit: cover;
  }

  .navn {
    position: absolute;
    display: flex;
    justify-content: space-around;
    bottom: 0;
    width: 300px;
    border-radius: 0 0 20px 20px;
    padding: 0 20px 10px 20px;
    align-items: center;
    font-family: "Alumni Sans", sans-serif;
  }

  .name {
    inline-size: 185px;
    justify-content: center;
    overflow-wrap: break-word;
    font-family: "Alumni Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: bold;
    font-style: normal;
    font-size: 50px;
    font-weight: 800;
    color: #f84104;
  }
  .date_land {
    display: flex;
    color: #3e3a3a;
    position: absolute;
    font-size: 20px;
    font-family: "Alumni Sans", sans-serif;
    font-weight: 600;
    justify-content: space-between;
    width: 298px;
    padding: 10px 20px;
  }
  .button_list {
    align-self: flex-end;
    padding-bottom: 15px;
  }
</style>
