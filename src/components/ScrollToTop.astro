<button id="scrollToTopBtn" title="Go to top">Top</button>



<style>

#scrollToTopBtn {
    color: #F84104;
  font-size: 20px;
  position: fixed; 
  bottom: 20px; 
  right: 30px; 
  z-index: 99;
  border: 2px solid #F84104; 
  outline: none; 
  background-color: #fff;
  cursor: pointer; 
  padding: 15px 15px; 
  border-radius: 30px; 
}

#scrollToTopBtn:hover {
    background-color: #F84104;
    color: #fff;
}
    </style>


<script>

document.getElementById('scrollToTopBtn').addEventListener('click', function() {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });

</script>