---
import MainLayout from "../components/layouts/MainLayout.astro";
import Carrousel from "../components/carrousel/Carrousel.astro";
import Carrousel2 from "../components/carrousel/Carrousel2.astro";
import Carrousel3 from "../components/carrousel/Carrousel3.astro";
import Carrousel4 from "../components/carrousel/Carrousel4.astro";
import "../styles/style.css";
---

<MainLayout>
  <h1>GALLERY</h1>
  <p class="text">Are you curious to experience the vibe at Karrusel? Let yourself be inspired by the stunning photos from last year's events and gain insight into the atmosphere and energy of the place. Click on the dot for the first image of the corresponding year to activate the image-slider!</p>
  <h2>2023</h2>
  <Carrousel />
  <h2>2022</h2>
  <Carrousel2 />
  <h2>2021</h2>
  <Carrousel3 />
  <h2>2019</h2>
  <Carrousel4 />
</MainLayout>
<style>
  body {
    background-image: url(../svg/background_image.svg);
    background-repeat: no-repeat;
    background-size: cover;
  }

  h1 {
    text-align: center;
    padding: 30px;
    background-image: url(../webp/mask_image.webp);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    --webkit-background-repeat: no-repeat;
    background-size: cover;
  }

  main h2 {
    text-align: center;
    font-family: "Amarante";
    color: #f2f2f2;
    padding-top: 80px;
  }

  .text {
    width: 50%;
    line-height: 20px;
    padding-top: 20px;
    margin: 0 auto;
    text-align: center;
    color: #f2f2f2;
  }

  @media screen and (max-width: 780px) {
    .text {
      width: 90%;
      font-size: 15px;
    }

    h1 {
      font-size: 30px;
    }

    h2 {
      font-size: 20px;
    }

    main h2 {
      padding-top: 40px;
    }

    .text {
      padding-top: 10px;
    }
  }
</style>
